generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int      @id @default(autoincrement())
  username           String
  email              String   @unique
  password           String
  passwordResetToken String?
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  photoUrl    String
  price       Int
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
